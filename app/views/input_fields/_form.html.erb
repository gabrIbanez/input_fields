<%= form_with(model: [my_form, input_field], url: form_input_fields_path(my_form, input_field)) do |form| %>
  <% if input_field.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(input_field.errors.count, "error") %> prohibited this input_field from being saved:</h2>

      <ul>
        <% input_field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select :type, [['Input Text', 'InputField::Text'], ['Select Field', 'InputField::SelectOption'], ['Number Field', 'InputField::Integer']] %>
  </div>

  <div>
    <%= form.label :label, style: "display: block" %>
    <%= form.text_field :label %>
  </div>

  <div>
    <%= form.label :hint, style: "display: block" %>
    <%= form.text_field :hint %>
  </div>

  <div>
    <%= form.label :required, style: "display: block" %>
    <%= form.check_box :required %>
  </div>

  <div>
    <%= form.label :position, style: "display: block" %>
    <%= form.text_field :position %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
